<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">

  <xacro:macro name="gtrobot_arm_transmission" params="prefix hw_interface">

    <xacro:arg name="poineer_arm_prefix" default="poineer::gtrobot_arm::"/>
    <!-- <xacro:property name="poineer_arm_prefix" value="poineer::"/> -->
        
    

    <transmission name="$(arg poineer_arm_prefix)${prefix}shoulder_pan_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="$(arg poineer_arm_prefix)${prefix}shoulder_pan_joint">
        <hardwareInterface>${hw_interface}</hardwareInterface>
        <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      </joint>
      <actuator name="$(arg poineer_arm_prefix)${prefix}shoulder_pan_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <transmission name="$(arg poineer_arm_prefix)${prefix}shoulder_lift_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="$(arg poineer_arm_prefix)${prefix}shoulder_lift_joint">
        <hardwareInterface>${hw_interface}</hardwareInterface>
        <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      </joint>
      <actuator name="$(arg poineer_arm_prefix)${prefix}shoulder_lift_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <transmission name="$(arg poineer_arm_prefix)${prefix}elbow_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="$(arg poineer_arm_prefix)${prefix}elbow_joint">
        <hardwareInterface>${hw_interface}</hardwareInterface>
        <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      </joint>
      <actuator name="$(arg poineer_arm_prefix)${prefix}elbow_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <transmission name="$(arg poineer_arm_prefix)${prefix}wrist_1_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="$(arg poineer_arm_prefix)${prefix}wrist_1_joint">
        <hardwareInterface>${hw_interface}</hardwareInterface>
        <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      </joint>
      <actuator name="$(arg poineer_arm_prefix)${prefix}wrist_1_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <transmission name="$(arg poineer_arm_prefix)${prefix}wrist_2_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="$(arg poineer_arm_prefix)${prefix}wrist_2_joint">
        <hardwareInterface>${hw_interface}</hardwareInterface>
        <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      </joint>
      <actuator name="$(arg poineer_arm_prefix)${prefix}wrist_2_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <transmission name="$(arg poineer_arm_prefix)${prefix}wrist_3_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="$(arg poineer_arm_prefix)${prefix}wrist_3_joint">
        <hardwareInterface>${hw_interface}</hardwareInterface>
        <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      </joint>
      <actuator name="$(arg poineer_arm_prefix)${prefix}wrist_3_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

  </xacro:macro>

</robot>
